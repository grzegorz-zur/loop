{
	"watch" : {
		"patterns" : [
			"*.go",
			"go.mod"
		]
	},
	"commands": [
		{
			"exec": "gofmt",
			"args": [ "-s", "-w", "." ]
		},
		{
			"exec": "golint",
			"args": [ "-set_exit_status" ]
		},
		{
			"exec": "go",
			"args": [ "vet" ]
		},
		{
			"exec": "go",
			"args": [ "build" ]
		},
		{
			"exec": "go",
			"args": [ "test", "-timeout", "5s" ]
		},
		{
			"exec": "go",
			"args": [ "test", "-timeout", "5s", "-race", "-cover" ],
			"env": {
				"CGO_ENABLED": "1"
			}
		}
	]
}
